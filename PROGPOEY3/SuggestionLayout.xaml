<UserControl x:Class="PROGPOEY3.SuggestionLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROGPOEY3"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Border BorderBrush="Black" BorderThickness="0,2,0,0" Padding="5">
        <Grid Background="White">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image x:Name="imgCategory" VerticalAlignment="Center" Source="Images/Volunteer.png" Width="36" Height="36"/>
                <Label x:Name="lblTitle" Content="Title" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"  Grid.ColumnSpan="2"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
