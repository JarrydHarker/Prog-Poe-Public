<UserControl x:Class="PROGPOEY3.uscChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROGPOEY3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="20" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel x:Name="grdChat"/>
        </ScrollViewer>
        <TextBox x:Name="txtChat" Margin="20,26,20,26" Grid.Row="1" Grid.Column="0" />
        <Button x:Name="btnChat" Content="Send" Style="{DynamicResource BaseButton}" Height="60" Width="60" Grid.Row="1" Grid.Column="1" Click="btnChat_Click" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
