<UserControl x:Class="PROGPOEY3.uscPending"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROGPOEY3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="mainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Label Content="Pending Reports" Style="{DynamicResource Title}" HorizontalAlignment="Center"/>
        <StackPanel x:Name="pnlReports" Grid.Row="1">
            <Label x:Name="lblTemp"  Style="{DynamicResource Subtitle}"  Content="No pending reports yet, check back here after you file a report."/>
        </StackPanel>
    </Grid>
</UserControl>
